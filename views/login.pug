extends layout

block content
  h1 Log in
  form(action="/login" method="POST")
    p E-mail:
      input(type="email" name="email" placeholder="Enter your mail")
    p Password:
      input(type="password" name="password" placeholder="Enter Your Password ")
    input(type="submit")

    p If don't have an account? 
      a(href="/") Sign up

    if errors
      ul
        for error in errors
          li!= error.msg